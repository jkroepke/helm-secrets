root = true

[*]
end_of_line = lf
insert_final_newline = true

[sh.cmd]
end_of_line = crlf

[*.{sh,bats,bash}]
indent_style = space
indent_size = 4
max_line_length = 120
trim_trailing_whitespace = true

[*.sh]
shell_variant = posix

[*.yaml]
indent_size = 2

[*.bash]
shell_variant = bash

[*.bats]
shell_variant = bats
